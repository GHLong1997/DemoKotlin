<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <EditText

        android:id="@+id/edit"
        android:layout_width="100dp"
        android:text="2"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        app:layout_constraintHorizontal_bias="0.6"
        android:text="Extension Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/nextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        app:layout_constraintHorizontal_bias="0.6"
        android:text="Generic Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextActivity"
        android:id="@+id/genericActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        app:layout_constraintHorizontal_bias="0.6"
        android:id="@+id/lambdaActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lambda Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genericActivity"
        />
    <Button
        app:layout_constraintHorizontal_bias="0.6"
        android:id="@+id/delegateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delegate Activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lambdaActivity"
        />
</android.support.constraint.ConstraintLayout>